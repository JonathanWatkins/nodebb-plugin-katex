{
    "id": "nodebb-plugin-katex",
    "name": "Markdown Parser",
    "description": "Use Katex parser in NodeBB",
    "url": "https://github.com/benjaminabel/nodebb-plugin-katex",
    "library": "./library.js",
    "less": [
        "public/less/default.less",
        "./public/fonts.less",
        "./public/katex.less"
    ],
    "scripts": [
        "public/js/client.js",
        "public/js/admin.js"
    ],
    "staticDirs": {
        "styles": "public/styles",
        "js": "public/js"
    },
    "templates": "./public/templates",
    "hooks": [
        { "hook": "static:app.load", "method": "onLoad" },
        { "hook": "filter:parse.post", "method": "parsePost", "priority": 5 },
        { "hook": "filter:parse.signature", "method": "parseSignature", "priority": 5 },
        { "hook": "filter:admin.header.build", "method": "admin.menu" },
        { "hook": "filter:composer.formatting", "method": "registerFormatting" }
    ]
}
